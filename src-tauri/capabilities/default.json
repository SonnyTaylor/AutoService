{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "opener:default",
    "dialog:default",
  "shell:default",
  {
    "identifier": "shell:allow-execute",
    "allow": [{
      "name": "powershell",
      "cmd": "powershell.exe",
      "args": [
        "-NoProfile",
        "-ExecutionPolicy",
        "Bypass",
        "-Command",
        { "validator": ".*" }
      ]
    }]
  }
  ]
}